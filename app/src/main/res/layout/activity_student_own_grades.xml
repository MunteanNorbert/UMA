<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_grades"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GradesActivity">

    <TextView
        android:id="@+id/own_subject_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Subject Name:"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/own_subject_name_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/own_subject_name"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/own_subject_professor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/own_subject_name_value"
        android:layout_marginTop="20dp"
        android:text="Professor Name:"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/own_subject_professor_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/own_subject_professor_name"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/current_own_lecture_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/own_subject_professor_name"
        android:layout_marginTop="100dp"
        android:text="Current lecture grade:"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/current_own_lecture_grade_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_own_lecture_grade"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/current_own_lecture_grade"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/current_own_laboratory_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_own_lecture_grade"
        android:layout_marginTop="80dp"
        android:text="Current laboratory grade:"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/current_own_laboratory_grade_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_own_laboratory_grade"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/current_own_laboratory_grade"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/current_own_subject_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_own_laboratory_grade"
        android:layout_marginTop="80dp"
        android:text="Current subject grade:"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <TextView
        android:id="@+id/current_own_subject_grade_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/current_own_subject_grade"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/current_own_subject_grade"
        android:textSize="20sp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/violet" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/studentBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/lexend_regular"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/student_menu" />

</RelativeLayout>
