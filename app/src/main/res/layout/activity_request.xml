<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/requestTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/lexend_regular"
        android:gravity="center_horizontal|bottom"
        android:text="Welcome to the Requests Page!\nEnter your request or question here!"
        android:textColor="@color/violet"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/requestEditText"
        android:layout_width="380dp"
        android:layout_height="280dp"
        android:gravity="top|start"
        android:hint="Enter your request here."
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        android:paddingStart="12dp"
        android:textColor="@color/violet"
        android:textSize="20dp"
        android:fontFamily="@font/lexend_light"
        android:inputType="textMultiLine"
        android:background="@drawable/edittext_rounded_background"
        android:layout_below="@id/requestTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/requestButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Send Request"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:fontFamily="@font/lexend_light"
        android:background="@drawable/button_rounded_background"
        android:layout_below="@id/requestEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"  />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/studentBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:fontFamily="@font/lexend_regular"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/student_menu" />

</RelativeLayout>